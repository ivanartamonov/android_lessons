<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="online.yourfit.ui.exercises.ExerciseDetailFragment"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/img_exercise_detail_img1"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_exercise_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_exercise_detail_img1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Название упражнения" />

    <TextView
        android:id="@+id/tv_exercise_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_exercise_detail_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Базовое" />

</RelativeLayout>