<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="online.yourfit.ui.home.WorkoutDetailFragment"
    android:background="@color/colorWhite"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_workout_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Large"
        android:text="Тренировка" />

    <TextView
        android:id="@+id/tv_workout_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:layout_below="@id/tv_workout_detail_title"/>

    <Button
        android:id="@+id/btn_workout_detail_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Удалить"
        android:layout_below="@id/tv_workout_detail_date"
        android:theme="@style/PrimaryFlatButton" />
</RelativeLayout>